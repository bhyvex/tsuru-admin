_tsuruadmin() {
    local tasks=""
    if [ ${#COMP_WORDS[@]} -lt 3 ]
    then
        tasks=`tsuru-admin | egrep "^[  ]" | awk -F ' ' '{print $1}'`
    fi
    local current=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=( $(compgen -W "$tasks" $current) )
}
complete -F _tsuruadmin -o bashdefault -o default tsuru-admin
